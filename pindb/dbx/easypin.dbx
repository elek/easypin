//--- ping requests ---//
model pin (
    key tx ix

    field tx text
    field ix int
    field cid text
    field amount int64
    field created_at timestamp ( autoinsert, default current_timestamp )
)

create pin ( )

read one (
    select pin
    where pin.cid = ?
)

//--- ipfs nodes to be pinned ---//
model node (
    key cid
    field cid text
    field expired_at timestamp
    field amount int64
    field created_at timestamp ( autoinsert, default current_timestamp )
)

create node ( )
